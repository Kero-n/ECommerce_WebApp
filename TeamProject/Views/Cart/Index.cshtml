@model List<TeamProject.Models.CartItem>

<h2>Your Cart</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Quantity * item.Price)</td>
                <td>
                    <a href="@Url.Action("UpdateCartItem", "Cart", new { id = item.CartItemId, quantity = item.Quantity + 1 })">Increase</a>
                    <a href="@Url.Action("RemoveCartItem", "Cart", new { id = item.CartItemId })">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
