@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <h3>Thank you for your order, @Model.CustomerName!</h3>
    <p>Your order has been successfully placed. Below are the details:</p>

    <h4>Order ID: @Model.OrderId</h4>
    <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
    <p><strong>Total Amount: </strong>@Model.TotalAmount.ToString("C")</p>

    <h4>Items:</h4>
    <ul>
        @foreach (var item in Model.Items)
        {
            <li>@item.ProductName - @item.Quantity x @item.Price.ToString("C")</li>
        }
    </ul>

    <a href="/Home/Index" class="btn btn-primary">Return to Home</a>
</div>
